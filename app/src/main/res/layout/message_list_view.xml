<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/msgUserImg"
            tools:srcCompat="@drawable/profiledefault" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/msgUserNameLbl"
            app:layout_constraintTop_toTopOf="@+id/msgUserImg" app:layout_constraintStart_toEndOf="@+id/msgUserImg"
            android:layout_marginStart="16dp" tools:text="User"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/msgTimestampLbl" app:layout_constraintStart_toEndOf="@+id/msgUserNameLbl"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/msgUserNameLbl" tools:text="Timestamp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/msgTextLbl" app:layout_constraintStart_toStartOf="@+id/msgUserNameLbl"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/msgUserNameLbl"
            tools:text="Message" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>