<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <TextView
            android:text="Add Channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/addChannelDialogTitleTxt"
            android:textAlignment="center"
            android:textSize="18sp" android:layout_marginBottom="18dp" android:layout_marginTop="24dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addChannelNameTextField" android:textColor="@android:color/darker_gray"
            android:hint="channel name" android:layout_marginBottom="18dp" android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addChannelDescTextField" android:textColor="@android:color/darker_gray"
            android:hint="channel description" android:layout_marginBottom="18dp" android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"/>


</LinearLayout>