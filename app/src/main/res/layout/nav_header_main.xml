<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:gravity="bottom" android:id="@+id/linearLayout">

    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@drawable/profiledefault"
            android:contentDescription="@string/nav_header_desc"
            android:id="@+id/profileIdImgNavHeader"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/loginoutBtnNavHeader"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/usernameTxtNavHeader"
            tools:text="UserName"
            android:textAlignment="viewStart"
            app:layout_constraintTop_toTopOf="@+id/profileIdImgNavHeader" app:layout_constraintStart_toEndOf="@+id/profileIdImgNavHeader"
            android:layout_marginStart="16dp" android:textColor="@android:color/white"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userEmailTxtNavHeader"
            app:layout_constraintStart_toStartOf="@+id/usernameTxtNavHeader"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/usernameTxtNavHeader" tools:text="person@place.com"
            android:textColor="@android:color/white"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/loginoutBtnNavHeader" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:background="@android:color/transparent"
            android:textColor="@android:color/white" android:textAlignment="center"
            android:onClick="loginoutBtnNavHeaderClicked" tools:text="Login" android:text="Login"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/addchannelbutton"
            android:id="@+id/addChannelBtnNavHeader"
            android:background="@android:color/transparent" android:scaleType="fitXY" android:padding="5dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="addChannelBtnNavHeaderClicked"/>

</android.support.constraint.ConstraintLayout>
